  <link href="https://fonts.googleapis.com/css2?family=Kelly+Slab&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles/menu-styles.css">
  <title>Menu MasterChedd</title>
</head>

<body>

  <header class="header-container">
    <section class="logo"><span style="color: #EBA742;">Master</span>Chedd</section>
    <section class="nav-bar">
      <a href="/carrinho"><img class="icons" src="images/icons/carrinho.png"></a>
      <a class="btn" href="/login">login</a>
    </section>
  </header>

  <main>
    <section class=" conteiner-menu">
      <div class="etiquetas-container">
        <div class="etiqueta">Entradas</div>
        <div class="etiqueta">Japonesa</div>
        <div class="etiqueta">Hamburguer</div>
        <div class="etiqueta">Variedades</div>
        <div class="etiqueta">Risotos</div>
        <div class="etiqueta">Saladas</div>
        <div class="etiqueta">Sobremesas</div>
        <div class="etiqueta">Bebidas</div>
      </div>
      <input class="pesquisar" type="text" placeholder="Pesquisar">
    </section>

    <section class="itens-container">
      <!-- ITENS -->

      <section class="itens">
        <!-- ITENS -->
        <section class="card-itens">
          <img src="images/pratos/saladas/legumes-grelhados-com-tiras-de-frango-no-azeite.jpg">
