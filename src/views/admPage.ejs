            </form>

            <P>Listagem dos pratos</P>
            <ul>
                <% pratosMenu.forEach(prato=> { %>
                    <li> ID: <%= prato.id %> - NOME: <%= prato.nome %> - DESCRICAO: <%= prato.descricao %> - PRECO: <%=
                                        prato.preco %> - CATEGORIA: <%= prato.categoria %>
                    </li>
                    <% }) %>
            </ul>

        </section>

        <section class="container container-3">
