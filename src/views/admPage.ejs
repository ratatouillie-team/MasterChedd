        </section>

        <section class="container container-5">
            <h2>Administrador</h2>
            <button class="form-btn" data-target="form-adicionar-adicionaradm">Adicionar</button>

            <form id="form-adicionar-adicionaradm" class="form" action="atribuir-admin" method="POST">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email do Administrador">

                <label for="adicionar permissao">Adicionar Permissao</label>

                <select name="permissao" id="permissao">
                    <option value="" disabled selected>Selecionar...</option>
                    <option value="admin">Admin</option>
                    <option value="">User</option>
                </select>

                <button>Adicionar administrador</button>
            </form>

            <P>Administrador Ativos:</P>
            <ul>
                <% adm.forEach(admin=> { %>
                    <li>ID: <%= admin.id %> - EMAIL: <%= admin.email %> - PERMISSAO: <%= admin.cargo %>
                    </li>
                    <% }) %>
            </ul>
        </section>

        <section class="container container-6">
            <h2>Feedback</h2>

            <form action="/criar-feedback" method="POST">
                <label for="feedback">Feedback</label>
                <input type="text" id="feedback" name="feedback" placeholder="Deixe aqui seu Feedback!!">

                <button>Enviar Feedback</button>
            </form>
        </section>

    </main>


    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const buttons = document.querySelectorAll(".nav-btn");
            const containers = document.querySelectorAll(".container");
            const formButtons = document.querySelectorAll(".form-btn");
            const forms = document.querySelectorAll(".form");

            // Controle de containers
            buttons.forEach((button) => {
                button.addEventListener("click", () => {
                    const targetClass = button.getAttribute("data-target");

                    containers.forEach((container) => {
                        container.classList.remove("active");
                    });

                    const targetContainer = document.querySelector(`.${targetClass}`);
                    if (targetContainer) {
                        targetContainer.classList.add("active");
                    }
                });
            });

            // Controle de formulários
            formButtons.forEach((button) => {
                button.addEventListener("click", () => {
                    const targetFormId = button.getAttribute("data-target");

                    forms.forEach((form) => {
                        form.classList.remove("active");
                    });

                    const targetForm = document.getElementById(targetFormId);
                    if (targetForm) {
                        targetForm.classList.add("active");
                    }
                });
            });
        });
    </script>

</body>

</html>