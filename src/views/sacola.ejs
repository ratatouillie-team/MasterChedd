  <!-- Formulário de pagamento -->
  <form class="pagamento">
    <h1 class="total">Total: R$ 0,00</h1>
    <label for="formasdepagamento">Qual a forma de pagamento?</label>
    <input class="formaPagamento" list="formasdepagamento" id="pagamento" placeholder="Insira aqui">
    <datalist id="formasdepagamento">
      <option value="Pix"></option>
      <option value="Cartão"></option>
    </datalist>

    <script>
      const pagamentoInput = document.getElementById('pagamento');

      pagamentoInput.addEventListener('input', function () {
        if (pagamentoInput.value === 'Pix') {
          alert('CHAVE PIX: 16 99625-6589');
        }
      });
    </script>

    <label for="observacao">Adicione uma observação</label>
    <input type="text" name="observacao" id="observacao" placeholder="Escreva aqui">
    <button type="submit">Finalizar pedido</button>
  </form>

  <script>
    // Preço dos produtos
    const precoUnitario = 14.99;

    // Função para atualizar a quantidade e o valor total de cada produto
    function updateDisplay(produtoElement) {
      const quantidadeDisplay = produtoElement.querySelector('.numeroquantidade');
      const resultadoDisplay = produtoElement.querySelector('.result');
      const quantidade = parseInt(quantidadeDisplay.textContent, 10);
      const total = quantidade * precoUnitario;
      resultadoDisplay.textContent = `R$ ${total.toFixed(2)}`;
    }

    // Atualiza todos os totais
    function updateTotal() {
      let totalPedido = 0; // Começa com 0, não 1
      const produtos = document.querySelectorAll('.pedido'); // Refaz a seleção dos produtos após remoção
      produtos.forEach(produto => {
        const quantidade = parseInt(produto.querySelector('.numeroquantidade').textContent, 10);
        totalPedido += quantidade * precoUnitario;
      });
      const totalElement = document.querySelector('.total');
      totalElement.textContent = `Total: R$ ${totalPedido.toFixed(2)}`;
    }

    // Inicializa o total e as quantidades ao carregar a página
    window.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.pedido').forEach(produto => {
        updateDisplay(produto); // Atualiza o display individual do produto
      });
      updateTotal(); // Atualiza o total geral
    });

    // Evento de adicionar e subtrair quantidade
    document.querySelectorAll('.pedido').forEach(produto => {
      const addButton = produto.querySelector('.addButton');
      const subtractButton = produto.querySelector('.subtractButton');
      const quantidadeDisplay = produto.querySelector('.numeroquantidade');

      addButton.addEventListener('click', () => {
        let quantidade = parseInt(quantidadeDisplay.textContent, 10);
        quantidade++;
        quantidadeDisplay.textContent = quantidade;
        updateDisplay(produto);
        updateTotal();
      });

      subtractButton.addEventListener('click', () => {
        let quantidade = parseInt(quantidadeDisplay.textContent, 10);
        if (quantidade > 1) {
          quantidade--;
          quantidadeDisplay.textContent = quantidade;
          updateDisplay(produto);
          updateTotal();
        }
      });

      // Evento de remover produto
      const removerButton = produto.querySelector('.remover-item');
      removerButton.addEventListener('click', () => {
        produto.remove(); // Remove o card de produto
        updateTotal(); // Atualiza o total após remoção
      });
    });
  </script>
